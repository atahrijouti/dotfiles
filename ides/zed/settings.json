{
  "theme": {
    "mode": "system",
    "light": "My Cyan Light",
    "dark": "JetBrains New Dark"
  },
  "vim_mode": true,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 500,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {},
  "autosave": "on_window_change",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "auto_update": false,
  "file_types": {
    "JSONC": ["~/AppData/Roaming/Zed/**/*.json"]
  },
  /** add windows terminal terminal fix here
    "terminal": {
      "shell": {
        "with_arguments": {
          "program": "cmd.exe",
          "args": ["/k"]
        }
      }
    }
  */
  // gitignore:start
  // gitignore:end
  "format_on_save": "on",
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  "languages": {
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"]
        }
      }
    }
  }
}
