{
  "theme": {
    "mode": "dark",
    "light": "My Cyan Light",
    "dark": "One Dark"
  },
  "vim_mode": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {},
  "autosave": "on_window_change",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "auto_update": false,
  "file_types": {
    "JSONC": ["~/AppData/Roaming/Zed/**/*.json"]
  },
  // "soft_wrap": "editor_width",
  "format_on_save": "on",
  "languages": {
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"]
        }
      }
    }
  }
}
