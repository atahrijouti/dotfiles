{
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "vim_mode": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {},
  "autosave": "on_window_change",
  "formatter": "language_server",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "auto_update": false,
  "file_types": {
    // The Windows config folder start with Uppercase Z
    "JSONC": [
      "~/AppData/Roaming/Zed/**/*.json"
    ]
  }
}
